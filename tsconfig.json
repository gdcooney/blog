{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "src"],
  "exclude": ["dist", "public/pagefind"],
  "compilerOptions": {
    // Add some common defaults usually inherited:
    "target": "ESNext",
    "module": "NodeNext", // Or ESNext, check Astro defaults
    "moduleResolution": "NodeNext", // Or Bundler, check Astro defaults
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Matches the 'strict' preset name

    // Keep your custom options:
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
